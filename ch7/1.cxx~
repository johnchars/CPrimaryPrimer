#include <iostream>
double ave( double x, double y);
int main(){
	using namespace std;
	double x,y,result;
	cout << "Enter x & y to compute their average:\n";
	cout << "(when x or y = 0,terminate process.\n";
	cin >> x >> y;
	while ( x !=0 && y !=0) {
		cout << "average is: " << ave(x,y) << endl;
		cout << "Enter x,y again to compute new average:\n";
		cin >> x >> y;
	}

}
double ave( double x, double y){
	//double result;
	return 2.0 * x * y /(x+y);
	//return result;
}
